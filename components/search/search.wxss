@import '/assets/iconfont/iconfont.wxss';
.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.2px;
  -moz-osx-font-smoothing: grayscale;
}

.search {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 8px;
}
.search .title {
  color: #42bd56;
  font-weight: bold;
}
.input-wrapper {
  width: 60%;
  display: inline-flex;
  align-items: center;
  padding: 2px 6px;
  margin-left: 8px;
  border: 1px solid #dfdfdf;
  border-radius: 40px;
  font-size: 14px;
  background: #f6f6f6;
  transition: .3s ease;
}
.input-wrapper .iconfont {
  margin-right: 4px;
  font-size: 22px;
  color: #aaa;
}
.desc-text {
  margin-left: 6px;
  color: #999;
}
